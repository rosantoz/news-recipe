<phpunit bootstrap="./bootstrap.php" colors="true">

    <testsuite name="All Tests">
        <directory>./app/src</directory>
    </testsuite>

    <filter>
        <whitelist>
            <directory suffix=".php">../app/src</directory>
            <exclude>
                <directory suffix=".php">../vendor</directory>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="../build/log/report" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="testdox-html" target="../build/log/testdox.html"/>
        <log type="coverage-clover" target="../build/logs/clover.xml"/>
    </logging>

</phpunit>